{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "import/prefer-default-export": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
        "react/prefer-stateless-function": 0,
        "indent": [1, 4],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": [1, 4],
        "curly": [2, "all"],
        "camelcase": 1
    },
    "parser": "babel-eslint"
}
